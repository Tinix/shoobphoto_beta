<%= simple_form_for(@export_list, remote: true) do |f| %>

<div class="modal-dialog" id="lesson_resources">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Student Awards List</h4>
      </div>
      <div class="modal-body centered">


  <div class="form-inputs">
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
      <div class="row header_award" align="center">
          <div class="col-xs-1"><strong></strong></div>
          <div class="col-xs-2"><strong>Title</strong></div>
          <div class="col-xs-1"><strong>Abbrev.</strong></div>
          <div class="col-xs-2"><strong>Awarded For (optional)</strong></div>
          <div class="col-xs-2"><strong>Definition (optional)</strong></div>
          <div class="col-xs-2"><strong>Time Period</strong></div>
          <div class="col-xs-2"><strong>Award Date</strong></div> 
        </div>

        
        <%= f.simple_fields_for :awards do |builder| %>
          <%= render 'award_fields', f: builder %>
        <% end %>
        
    


  </div> <br/><br/>


      <div class="form-actions">
      <div class="modal-footer">
         <button type="button" class="btn btn-export" data-dismiss="modal">Close</button>
    <%= f.button :submit, "Export list", class: "btn btn-blue btn-loading" %>
      </div>   
      </div>   
      

    </div>
  </div>
</div>

<% end %>

<script type="text/javascript">
    $('.datetimepicker').datetimepicker();
</script>
