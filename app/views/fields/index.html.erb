<h1>Listing fields</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= link_to "#{field.name}", template_field_path(@template, field) %></td>
        <td><%= link_to 'Edit', edit_template_field_path(@template, field) %></td>
        <td><%= link_to 'Destroy', template_field_path(@template, field), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Field', new_template_field_path %>
