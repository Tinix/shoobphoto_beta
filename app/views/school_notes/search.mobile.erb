<style>
    
.mobile_district_form {
    width: 100%;
    text-align: center;
    margin: 237px 0px 0px 0px;
}
    
.btn-blue_mobile2 {
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 5px;
  color: #5392c8;
  background: #1abc9c;
  padding: 5px 8px 5px 8px;
  border: solid #000000 0px;
  text-decoration: none;
  text-align:center;
  color:#fff;
  font-size: 30px;
}    

.btn-blue_mobile3 {
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 5px;
  color: #5392c8;
  background: #1289cd;
  padding: 5px 8px 5px 8px;
  border: solid #000000 0px;
  text-decoration: none;
  text-align:center;
  color:#fff;
  font-size: 30px;
}    

.mobile_text {
  font-size: 30px;
}

.form-control {
  font-size: 45px;
  height: 50px;
}
    
