<style>
	
.mobile_note_form {
    width: 100%;
    margin: 237px 0px 0px 0px;
}

.mobile_school_font {
	font-size: 40px;
}

.mobile_label_font {
	font-size: 35px;
}
.mobile_label_font2 {
	font-size: 40px;
}

.container {
  width: 100%; !important
}    

.container-fluid {
  width: 100%; !important
}
   	
</style>

<br /><br /><br />
<span style ="font-size:40px"><b><%= @school.name %></b></span>
<hr>
<div style ="font-size:30px">
<%= @school.city.try(:name) %>, <%= @school.district.try(:name) %><br/>
Address: <%= @school.address %><br/>
Phone: <%= @school.phone %><br/>

Principal: <%= @school.principal %><br/>
Secretary: <%= @school.secretary %><br/>
</div>
<hr>

<span style ="font-size:40px"><b>Notes</b></span>

<%= form_for(@school, :url => updatenote_school_note_path(@school)) do |f| %>
	<%= f.fields_for :notes do |builder| %>
	  <%= render 'note_fields', f: builder %>
	<% end %>
	<br/>
	<span class="mobile_label_font2"><%= link_to_add_fields "Add New Note", f, :notes %></span><br/><br/>
	  <hr>
<span class="mobile_label_font2"><%= f.submit %></span>
<% end %>
</div>