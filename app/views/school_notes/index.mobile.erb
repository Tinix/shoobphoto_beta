<style>
  
.mobile_index_form {
    width: 100%;
    margin: 237px 0px 0px 0px;
}

.mobile_large_font {
  font-size: 33px;
}

.btn-blue_mobile2 {
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 5px;
  color: #5392c8;
  background: #1abc9c;
  padding: 5px 8px 5px 8px;
  border: solid #000000 0px;
  text-decoration: none;
  text-align:center;
  color:#fff;
  font-size: 25px;
}

.container {
  width: 100%; !important
}    

.container-fluid {
  width: 100%; !important
}

.mobile_status_left {
  width: auto;
  float: left;
  margin: 0px 40px 0px 0px;
}

.mobile_status_right {
  width: auto;
}

.enjoy-css {
  background-color: white !important;
  color: black !important;
  height: 20px !important;
  padding: 4px !important;
  border: 1px !important;
  width: 20% !important;
  border-radius: 2px !important;
}
  
</style>

<br /><br /><br />
<span style ="font-size:40px"><b>Notes</b></span>

<br/>

<%= form_tag(school_notes_path, :method => "get") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Schools", :class => "enjoy-css" %>
  <%= submit_tag "Search" %>
<% end %>

<% @school_notes.each do |school| %>
  <span style ="font-size:30px"><b><%= school.name %></b></span><br/><br/>

  <% school.notes.each do |note| %>
  
<div class="mobile_status_left">
  <div style ="font-size:25px">
    Status: <%= note.complete? ? 'Completed' : 'Incomplete' %>
  </div>
</div>

<div class="mobile_status_right" style ="font-size:25px !important;">
  <%= link_to "View", note_path(school.id, note.id), class: "btn-blue_mobile2" %>
</div>  

  <br/>

  <div style ="font-size:25px">[<i><%= note.created_at.to_time.try(:strftime, '%B %e %Y') %></i>]</div>
  <br/>  

    <div style ="font-size:25px"><%= note.note %></div>
 
  <br/>
  
  
    <div style ="font-size:25px"><strong>Response:</strong> <%= note.action %></div>
  <br/>
  
  <hr>
  <% end %>

<% end %>
</div>