<h4><%= @school_note.name %></h4>
<hr>
<%= @school_note.city.try(:name) %>: <%= @school_note.district.try(:name) %><br/>
Address: <%= @school_note.address %><br/>
Phone: <%= @school_note.phone %><br/>

Principal: <%= @school_note.principal %><br/>
Secretary: <%= @school_note.secretary %><br/>
<hr>

<h4>Projects</h4>

<% @school_note.notes.each do |note| %>

<div class="row">
    <div class="col-sm-2">
      <%= note.created_at.to_time %>
    </div>
    <div class="col-sm-8">
      <%= note.note %>
    </div>
    <div class="col-sm-2">
      Status: <%= note.complete? ? 'Completed' : 'Incomplete' %><br/>

    </div>
  </div><br/>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10"><strong>Additional notes:</strong> <%= note.action %></div>
  </div><br/>
  <hr>
<% end %>

