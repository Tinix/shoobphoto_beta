<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Scode</th>
      <th>Account</th>
      <th>Date</th>
      <th>Job</th>
      <th>Jobtype</th>
      <th>Package</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.scode %></td>
        <td><%= job.account %></td>
        <td><%= job.date %></td>
        <td><%= job.job %></td>
        <td><%= job.jobtype %></td>
        <td><%= job.package_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

