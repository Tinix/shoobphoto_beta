<style>

.award_header {	
  text-align: right;
}

</style>

<!-- The progress list at the top -->

<div class="row">
<div class="col-xs-1">
</div>
	<div class="award_header">
	<div class="col-xs-2">
		<small><span class="glyphicon glyphicon-ok-sign" style="color:#FFBB00"></span></small><b style="font-size:14px; color:#FFBB00;"> SELECT AWARD</b>
	</div>
	<div class="col-xs-2">
		<small><span class="glyphicon glyphicon-ok-sign" style="color:#FFBB00"></span></small><b style="font-size:14px; color:#FFBB00;"> ADD INFORMATION</b>
	</div>
	<div class="col-xs-2">
		<small><span class="glyphicon glyphicon-ok-sign" style="color:#FFBB00"></span></small><b style="font-size:14px; color:#FFBB00;"> SELECT STUDENTS</b>
	</div>
	<div class="col-xs-2">
		<small><span class="glyphicon glyphicon-ok-sign" style="color:#FFBB00"></span></small><b style="font-size:14px; color:#FFBB00;"> REVIEW LISTS</b>
	</div>
	<div class="col-xs-2">
		<small><span class="glyphicon glyphicon-ok-circle" style="color:#396599"></span></small><b style="font-size:14px; color:#396599;"> SUBMIT LISTS</b>
	</div>
	</div>
<div class="col-xs-1">
</div>
</div>

<br/>

<!-- The line with the school logo and school name -->

<div class="row">
	<div class="col-xs-2" align="right">
	<%= image_tag(current_user.school.logo, class: "school_logo") %>
	</div>
	<div class="col-xs-10" style="color:#396599; font-size:40px; padding-top:20px;">
  <%= current_user.school.name.upcase %> AWARDS
  </div>
</div>

<br/>

<!-- The 'Student Search' forms -->


<!-- The student select list -->

<div class="row">
	<div class="col-xs-1">
	</div>
	<div class="col-xs-10">
		<span style="font-size:30px; color:#396599">REVIEW ALL LISTS TO BE SUBMITTED</span>
	</div>
</div>

<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-2 blue_text">AWARD</div>
	<div class="col-xs-3 blue_text">DATE STARTED</div>
	<div class="col-xs-3 blue_text">AWARD DATE</div>
	<div class="col-xs-3 blue_text">RECEIVE BY</div>
</div>
 

	<% @export_list.award_infos.order(:index).each_with_index do |award, i| %>
	<div class="row">
	<div class="col-xs-1">
		<%= image_tag(award.award.image.url, class: "award_thumbnail") %>
	</div>
	<div class="col-xs-2 blue_text"><%= award.award.abbreviation %></div>
	<div class="col-xs-3 blue_text"><%= award.created_at.strftime("%m/%d/%Y") unless award.created_at.nil? %></div>
	<div class="col-xs-3 blue_text"><%= award.award_date.strftime("%m/%d/%Y")  unless award.award_date.nil? %></div>
	<div class="col-xs-3 blue_text"><%= award.receive_by.strftime("%m/%d/%Y")  unless award.receive_by.nil? %></div>
</div>
	<% end %>
<br/>
<div class="row">

	
	<div class="col-xs-4">
		<%= link_to "ADD ANOTHER AWARD", awards_multiple_path(@export_list.uniq_id), class: "btn-awards-next2" %>
	</div>
	<div class="col-xs-4">
		<% if @export_list.multiple? %>
			<%= link_to "EDIT AWARD LIST", award_multiple_add_info_path(@export_list.uniq_id), class: "btn-awards-next2" %>
		<% end %>
	</div>
	<div class="col-xs-4">
		<%= link_to "SAVE AND CONTINUE", award_confirm_path(@export_list.uniq_id), class: "btn-awards-next" %>
	</div>
</div>
