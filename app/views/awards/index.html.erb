<br/><br/>

<%= link_to "Create a New Award", new_award_path, class: "btn btn-orange btn-centered batchlink" %><br/>

<% if current_user.export_lists.where(submitted: false).any? %>

<h3>Your awards in progress:</h3>


<% current_user.export_lists.where(submitted: false).each do |export_list| %>
<div class="row">
  <div class="col-xs-3">
    In progress
  </div>

  <div class="col-xs-4">
    Awards: <%= export_list.awards.map(&:abbreviation).join(", ") %>
  </div>

  <div class="col-xs-3">
    <%= link_to "Continue Award", edit_award_path(export_list.id) %>
  </div>

  </div>
<% end %>
<% else %>
<h3>Your awards in progress will appear here.</h3>
<% end %>


<% if current_user.export_lists.where(submitted: true).any? %>
<hr>
<h3>Your previously submitted awards:</h3>


<% current_user.export_lists.where(submitted: true).each do |export_list| %>
<div class="row">
  <div class="col-xs-3">
    Submitted
  </div>

  <div class="col-xs-4">
    Awards: <%= export_list.awards.map(&:abbreviation).join(", ") %>
  </div>

  <div class="col-xs-3">
    <%= link_to "Edit to resubmit", export_awards_path(export_list.uniq_id), class: "btn-blue", data: { "loading-text" => "Loading ..." } %>
  </div>

  </div>
<% end %>

<% end %>