<style>

.award_header {	
  text-align: right;
}

</style>

<!-- The progress list at the top -->

<!-- The line with the school logo and school name -->

<div class="row">
	<div class="col-xs-2" align="right">
	<%= image_tag(current_user.school.logo, class: "school_logo") %>
	</div>
	<div class="col-xs-10" style="color:#396599; font-size:40px; padding-top:20px;">
  <%= current_user.school.name.upcase %> AWARDS
  </div>
</div>

<br/>

<!-- The 'Student Search' forms -->


<!-- The student select list -->


<div class="row">
	<div class="col-xs-2 blue_text">SUBMITTED</div>
	<div class="col-xs-2 blue_text">AWARD DATE</div>
	<div class="col-xs-2 blue_text">RECEIVE BY</div>
	<div class="col-xs-2 blue_text">AWARDS</div>
	<div class="col-xs-4 blue_text">SEND CORRECTION</div>
</div>

	<% current_user.export_lists.where(:submitted => true).each do |export_list| %>
	<% export_list.award_infos.order(:index).each_with_index do |award, i| %>
	<div class="row">
		<div class="col-xs-2 blue_text">
		<% if i == 0 %>
		<%= export_list.submit_date.strftime("%m/%d/%Y") unless export_list.submit_date.nil? %>
		<% end %>
		</div>
		<% unless award.award.nil? %>
			<div class="col-xs-2 blue_text"><%= award.award_date.strftime("%m/%d/%Y") unless award.award_date.nil? %></div>
			<div class="col-xs-2 blue_text"><%= award.receive_by.strftime("%m/%d/%Y") unless award.receive_by.nil? %></div>
			<div class="col-xs-1">
				<% unless award.award.try(:image).nil? %>
				<%= image_tag(award.award.image.url, class: "award_thumbnail") %>
				<% end %>
			</div>
			<div class="col-xs-1 blue_text"><%= award.award.abbreviation %></div>

			<div class="col-xs-4 blue_text">
				<% if i == 0 %>
			<%= link_to "REVIEW/CORRECT", award_create_corrections_path(award.export_list.uniq_id), class: "btn-awards-next2" %>
			
			<% end %>
			</div>
		<% end %>
	</div>
	<% end %>
	<% end %>
<br/>

