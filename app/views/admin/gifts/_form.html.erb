<%= simple_form_for([:admin, @gift]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="field">
    <%= f.input :name %>
    <%= f.input :description, as: :string %> 
    <%= f.input :number, label: "Gift ID" %>

    <%= f.input :price, label: "Price (in $)" %>


    <%= f.input :image, as: :file %>

    <%= image_tag(@gift.image.url) if @gift.image? %>

  </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
 