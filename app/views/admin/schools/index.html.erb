<h1>Listing schools</h1>
<br>
<%= search_form_for [:admin, @search] do |f| %>
<div class="field">
  <%= f.label :name_cont, "Name contains" %>
  <%= f.text_field :name_cont %>
</div>
<div class="actions"><%= f.submit "Search" %></div>


<%= link_to "Export schools", export_admin_schools_path  %>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
    <tr>
      <th colspan="4"></th>
    </tr>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.route %></td>
        <td><%= school.district_id %></td>
        <td><%= link_to 'Show', admin_school_path(school) %></td>
        <td><%= link_to 'Edit', edit_admin_school_path(school, q: params[:q]) %></td>
        <td><%= link_to 'Destroy', admin_school_path(school), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_admin_school_path %>
