<h1>Listing extras</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Extra type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extras.each do |extra| %>
      <tr>
        <td><%= extra.name %></td>
        <td><%= extra.extra_type_id %></td>
        <td><%= link_to 'Show', admin_extra_path(extra) %></td>
        <td><%= link_to 'Edit', edit_admin_extra_path(extra) %></td>
        <td><%= link_to 'Destroy', admin_extra_path(extra), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Extra', new_admin_extra_path %>
