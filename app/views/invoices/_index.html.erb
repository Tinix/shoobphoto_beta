<!-- Basic header code -->
<div class="row">

    <!-- Empty div for spacing -->
    <div class="col-xs-9">
    </div>

    <!-- Project number -->
    <div class="col-xs-3" style="text-align: right;">
        <b>Project #<%= @dproject.id %> </b>
    </div>

</div>

<div class="row">

    <!-- School name -->
    <div class="col-xs-3">
        <%= @dproject.school.name %>
    </div>

    <!-- Scode -->
    <div class="col-xs-1">
        <%= @dproject.school.scode %>
    </div>

    <!-- Requested by name -->
    <div class="col-xs-3">
        Requested by: <%= @dproject.requested_by %>
    </div>

    <!-- Address (CITY NAME NEEDS FIXING) -->
    <div class="col-xs-5">
        <%= @dproject.school.address %>, <%= @dproject.school.dcity %>, <%= @dproject.school.state %>, <%= @dproject.school.zip %>
    </div>

</div>
<hr></br>
<!-- End of header -->
<!-- Table code -->
<table class = "lineitems">
<thead> 
<tr style="border-bottom: 2px solid black;">
    <th></th>
    <th> Quantity </th>
    <th> Item </th>
    <th> Price </th>
    <th> Tax </th>
    <th> Total </th>
</tr>
</thead>
 <tbody>
  <% @dproject.lineitems.each do |lineitem| %>
    <tr>
    <td width="5%" style="text-align: left;"><%= link_to 'Print', print_dproject_invoice_path(@dproject, lineitem.invoice) %></td>
      <td width="25%" class="dotted"><%= lineitem.quantity %></td>
      <td width="50%" class="dotted"><%= lineitem.product %></td>
      <td width="15%" class="dotted"><%= lineitem.price %></td>
      <td width="10%" class="dotted"><%= lineitem.tax %></td>
      <td width="25%" class = "dotted"><%= lineitem.final %></td>
    </tr>
    <% end %>
</tbody>
<!-- End of table -->
</table>
     
</div>
</div>
<br></br>
<br></br>
<!-- Back button -->
<div class="col-xs-1">
<%= link_to 'Back', dproject_invoices_path %>
</div>