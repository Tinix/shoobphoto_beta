<style>

.dotted{
  border-bottom: 1px dotted black;
}

td, th{
  font-size: 16px;
}

button {
	border-radius: 5px;
	background-color: white;
	width: 15%;
}

.dropbtn {
    background-color: #4CAF50;
    color: white;
    padding: 7px;
    font-size: 16px;
    border: none;
    width: 100% !important;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f1f1f1;
    box-shadow: 0px 8px 2px 0px rgba(0,0,0,0.2);
    z-index: 1;
    text-align: center;
}

.dropdown-content a {
    color: black;
    padding: 2px 2px;
    text-decoration: none;
    display: block;
    font-size: 16px;
    text-align: center;
}

.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block;}

.dropdown:hover .dropbtn {background-color: #3e8e41;}

#photography {
  display: none;
}

#production {
  display: none;
}

#confirms {
  display: block;
}

#btnConfirms {
  color: white;
  background-color: black;
}

.printThis {
  display: none;
}

@media print {
    .noPrint { display: none; }
    .printThis { 
        display: block; 
    }
} 

</style>
<br/><br/>

<div class="row noPrint">
  <div class="col-xs-8">
    <h3>Jobs</h3>
    <div class="col-xs-4">
      <%= link_to 'New djob', new_djob_path, class: "btn btn-primary" %>
      </div>
    </br></br>
    <%= search_form_for @q, url: djobsconfirms_path do |f| %>
    <%= f.hidden_field :s, value: params[:q].try(:[], :s) %>
      School:
      <%= f.select :school_name_eq, Djob.includes(:school).order('schools.name').all.map { |djob| djob.school.name }.uniq, selected: (params[:q] ? params[:q][:school_name_eq] : nil), include_blank: true %>
      <br />
      Job Type:
      <%= f.select :JOBTYPE_eq, Djob.all.order(:JOBTYPE).pluck(:JOBTYPE).uniq, selected: (params[:q] ? params[:q][:JOBTYPE_eq] : nil), include_blank: true %>
      <br />
      Confirmed?:
      <%= f.select :CONF_YN_eq, Djob.all.order(:CONF_YN).pluck(:CONF_YN).uniq, selected: (params[:q] ? params[:q][:CONF_YN_eq] : nil), include_blank: true %>
      <br/>
      Reconfirmed?:
      <%= f.select :RECONFYN_eq, Djob.all.order(:RECONFYN).pluck(:RECONFYN).uniq, selected: (params[:q] ? params[:q][:RECONFYN_eq] : nil), include_blank: true %>
      <br />
      Data?:
      <%= f.select :DATA_NOTES_eq, Djob.all.order(:DATA_NOTES.pluck(:DATA_NOTES).uniq, selected: (params[:q] ? params[:q][:DATA_NOTES_eq] : nil), include_blank: true %>
      <br />
      Notices?:
      <%= f.select :NOTICES_eq, Djob.all.order(:NOTICES).pluck(:NOTICES).uniq, selected: (params[:q] ? params[:q][:NOTICES_eq] : nil), include_blank: true %>
      <div class = "Date">
        <div class="col-xs-6">
          Date:
          <%= f.date_field :DATE_eq, class: 'form-control input-sm', id: 'date_fill', 'datepicker' => true %>
        </div>
      </div>
      </br>
      <div class="col-xs-6">
        <%= f.submit %>
      </div>
      <br />
      <div class = "col-xs-2">
        <%= link_to 'Previous', bydate_djobs_path(q: params[:q], direction: -1, :type => "photography")  %>
      </div>
        <div class = "col-xs-2"> 
          <%= link_to 'Next', bydate_djobs_path(q: params[:q], direction: 1, :type => "photography")  %>
        </div>
        <br />
      </div>
      </br>
      </br>
</div>
</br>

<div class="row noPrint">
  <div class="col-xs-1">
  </div>
  <div class="col-xs-1">
    <%= link_to "Confirms", djobsconfirms_path(q: params[:q]), class: "btn btn-primary" %>
  </div>
  <div class="col-xs-1">
  </div>
  <div class="col-xs-1">
    <%= link_to "Production", djobsproduction_path(q: params[:q]), class: "btn btn-primary" %>
  </div>
</div>

  <% if current_user.admin? %>
    <%= render 'photography_admin' %>
  <% else %>
    <%= render 'photography_nonadmin' %>
  <% end %>

<% end %>