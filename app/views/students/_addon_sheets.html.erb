<div class="row">
	<% @opackage.addon_sheets.where(:addon_id => @addon.id).each do |addon_sheet| %>
		<div class="col-xs-3" id="<%= @addon.css_name %>">
			<div class="<%= @opackage.id %> <%= addon_sheet.id %> <%= addon_sheet.index %> inner droppable animated fadeInRight" id="<%= @addon.css_name %>">
			</div>
		</div>
	<% end %>
</div>
<br/>
<script>
$(function() {

    $( ".droppable" ).droppable({
      drop: function( event, ui ) {
      	var classes = $(this).attr("class").split(/\s/); 
		    $.get('/students/add_addon_pose/' + classes[1] + '/' + classes[2] + '/' + ui.draggable.attr("id")).success(function(data) { } )
      }
    });
  });
</script>