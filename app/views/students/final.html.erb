<h3>Cart:</h3>

<table class="table">
	<tr>
		<td>Student's name</td>
		<td>Package</td>
	</tr>
<% @cart.students.each do |student| %>
	<tr>
	<td>
	<%= student.first_name %> <%= student.last_name %>
	</td>
	<td>
	<% @cart.order_packages.where(:student_id => student.id).each do |o| %>

			<%= number_to_currency(o.option.price(@cart.students[params[:i].to_i].school.id), :unit => "$") %>  - <%= o.package.name %><%= ": Pose #{o.pose}" unless o.pose.nil? %> - <%= o.option.name %><br/>

			<% o.extras.each do |extra| %>
				<%= number_to_currency(extra.prices.first.try(:price), :unit => "$") %> - <%= extra.name %> <br/>
			<% end %>

			<% if o.package.shippings.where(:school_id => @cart.students[params[:i].to_i].school.id).any? %>
					+ <%= number_to_currency(o.package.shippings.where(:school_id => @cart.students[params[:i].to_i].school.id).first.price, :unit => "$") %> shipping
					<% elsif o.package.shippings.where(:school_id => nil).any? %>
					+ <%= number_to_currency(o.package.shippings.where(:school_id => nil).first.price, :unit => "$") %> shipping
					<% end %>

			<hr>
 	<% end %>
 	</td>
 	 </tr>
 <% end %>

<tr>
	<td>
	</td>
	<td>
	 <h3><%= number_to_currency(@cart.price, :unit => "$") %> </h3>
	 </td>
	 </tr>
 </table>
<div class="row">
<div class="col-sm-3" align="left">
	<% if @cart.order_packages.pluck(:package_id).include?(253) %>
		<%= link_to "Add more images to your order", student_download_path(@cart.shoob_id, @cart.cart_id), class: "btn btn-primary" %>
	<% else %>
		 <%= link_to "Add more students to your order", student_schools_path(:cart_id => @cart.cart_id, :i => @cart.students.count), class: "btn btn-primary" %>
	<% end %>
 </div>
 <div class="col-sm-6">
 </div>
 <div class="col-sm-3" align="right">
 <%= link_to "Checkout", new_order_path(@cart.cart_id), class: "btn btn-primary" %>
 </div>
 </div>