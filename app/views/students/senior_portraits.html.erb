<br/><br/><div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-3">
		<% option = @opackage.options.first %>
		<strong><%= option.name %> (<%= "#{option.poses} #{'Pose'.pluralize(option.poses)}"%>)</strong><br/><span class="currency"><%= "#{number_to_currency(option.price(@student.school), :unit => "$")}" %></span><br/>
										<% option.image_types.each do |type| %>
											
												<span class="listing"><%= type.name %></span>
											 
										<% end %> 
		<h3>Your Poses: (click to select)</h3>
		<div class = "sort_paginate_ajax"><%= render 'senior_image_display', :opackage => @opackage %></div>
	</div> 
	<div class="col-xs-3"><br/><br/><br/><br/><br/><br/>
		<span id="image_preview"></span>
	</div>
	<span id="senior_images">
		<%= render 'senior_images' %> 
	</span>
</div><br/>
<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-5" align="left">
		<%= link_to "Back", student_select_package_path(@cart.cart_id, @cart.students.count - 1, 6), class: " btn-custom4" %>
	</div>
	<div class="col-xs-5" align="right">

        <%= link_to "Continue", senior_portrait_addons_path(@cart.cart_id, @cart.students.count - 1), class: "btn-custom4" %>
     <div class="col-xs-1"></div>
</div>
</div>

<br/>




<script>


	$(function() {
  $(".sort_paginate_ajax").on("click", ".pagination a", function(){
    $.getScript(this.href);
    return false;
  });
});
$(function() {

    $( ".draggable" ).draggable({helper : 'clone', revert: 'invalid',
    appendTo: 'body' });
 
  });
</script>

