
<div class="row">
	<div class="col-sm-3" id="sidebar" align="center">
		<strong>Please drag the senior poses below into your package's sheets</strong><hr>
		<% @senior_url.each do |senior_url| %>
					<% i = @senior_url.index(senior_url) %>
						<% unless @senior_id[i] == "default" %>

								<%= image_tag(senior_url, :class => "img-rounded img-package image_#{i} draggable", :id => "#{@senior_url[i]}") %><br/>
								<strong><%= "Pose #{i + 1}" %></strong><br/>
						<% end %>
		<% end %>
	</div>
	<div class="col-sm-9">
	<% @opackage.options.each do |option| %>
	<h4><%= option.name %></h4>
	<hr  style="z-index: 3">

		<% option.image_types.each do |image_type| %>
		<% if image_type.name.include? "x" %>
			<strong style="z-index: 3"><%= ImageType.name_out(image_type.id) %></strong>
			<div class="row">
				<% (ImageType.count(image_type.id)).times do |i| %>
					<div class="col-md-2" id="<%= ImageType.classname(image_type.id) %>">
						<div class="<%= image_type.id %>_<%= i %> inner droppable" id="<%= ImageType.classname(image_type.id) %>">
						</div>
					</div>
				<% end %>
			</div>
		<hr  style="z-index: 3">
		<% end %>
		<% end %>
	<% end %>
	</div>
</div>



<script>
var sidebar = document.getElementById('sidebar');
Stickyfill.add(sidebar);

$(function() {
    $( ".draggable" ).draggable({helper : 'clone' });
    $( ".droppable" ).droppable({
      drop: function( event, ui ) {
      	var classes = $(this).attr("class").split(/\s/);
        $.get('/students/<%= @cart.cart_id%>/update_senior_portraits/' + $(this).attr("id") + '/' + classes[0] + '?url=' + ui.draggable.attr("id")).success(function(data) { } )
      }
    });
  });
</script>