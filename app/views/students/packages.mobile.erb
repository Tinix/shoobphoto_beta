<div class="animated fadeInUp">
<% @packages.each_with_index do |package, index| %>
	<%= link_to student_select_package_path(@cart.cart_id, @cart.students.count - 1, package.id) do %>
		<div class="mobile_package <%= index.even? ? 'even_blue' : 'odd_blue'%>">
			<p><%= package.name.upcase %></p>
		</div> 
	<% end %>
	<% end %>

	<div class="mobile_gift_container">
		<p style="color: white; font-size: 55px; text-align:center; line-height:10vh; vertical-align:middle;"><%= link_to gift_packages_path(@cart.cart_id, @cart.students.count - 1), {:style=>'color:#FFFFFF;'} do %> GIFTS <% end %></p>
	</div>
</div>