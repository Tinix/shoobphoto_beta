<div class="jumbotron animated fadeInUp">
<h3 align="center">Which school?</h3>
	<%= form_tag(student_search_path, method: :get) do %>
       <div class="field">
	    <%= 
	    collection_select(
	    :school,
	    :id,
	    @schools.all, 
	    :id, 
	    :name,
	    {:prompt => false}, {:class => "form-control"}) %>

	    <%= hidden_field_tag "i", @i %>
	    <%= hidden_field_tag "cart", @cart %>
  </div>
  	<div align="center">
   <%= submit_tag "Continue", class: "btn btn-primary" %>
   </div>
     <% end %>
</div>

