<h2><%= @school.name %></h2><hr />
<div class="searchform">
<%= form_tag(export_students_path, method: :get, :id => "students_search") do %>
<div class="row">
	<div class="col-sm-1"><div class="white">Search:</div></div>
	<div class="col-sm-2">
        First Name: <%= text_field_tag :first_name, nil, placeholder: "Student's First Name", class: "form-control", id: "input_first_name", label: false, input_html: {value: "#{params[:first_name]}"} %>
    </div>
    <div class="col-sm-2">
        Last Name: <%= text_field_tag :last_name, nil, placeholder: "Student's Last Name", class: "form-control", id: "input_last_name", input_html: {value: "#{params[:last_name]}"} %>
    </div>
    <div class="col-sm-2">
        Student ID: <%= text_field_tag :student_id, nil, placeholder: "Student's ID Number", class: "form-control", id: "input_id", input_html: {value: "#{params[:student_id]}"} %>
    </div>    <div class="col-sm-2">
        Grade:
    <%= select_tag :grade, options_for_select( @school.students.where(:id_only => true).select(:grade).order(:grade).map(&:grade).uniq), class: "form-control", id: "input_student_grade", :prompt => "Search by grade" %>

    </div>

    <div class="col-sm-2">
        Teacher:
    <%= select_tag :teacher, options_for_select( @school.students.where(:id_only => true).select(:teacher).order(:teacher).map(&:teacher).uniq), class: "form-control", id: "input_student_teacher", :prompt => "Search by teacher" %>

    </div>

   	<div class="col-sm-1"><br/><%= submit_tag "Go", class: "btn btn-primary" %></div>
</div>
<% end %>
<br/>

</div>


<%= link_to "New Student", export_new_path(@school.id, @image.id), remote: true, class: "btn btn-primary btn-centered" %>



	<% if current_user.try(:admin) %>


			<%= render 'sidebar' %><br/>
			<div id="students_list"><%= render 'students', :locals => {:students => @students, :image => @image} %></div>
	</div>
	<% else %>
	<div id="students_list"><%= render 'students', :locals => {:students => @students, :image => @image} %></div>

	<% end %>
