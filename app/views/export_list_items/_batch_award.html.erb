<div class="modal-dialog" id="lesson_resources">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Student Awards List</h4>
      </div>
      <div class="modal-body centered">
        <div id="table">
        <table class="table">
          <thead>
            <th>Remove</th>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
            <th>Teacher</th>
          </thead>
          <tbody>
       <% current_user.students.each do |student| %>
       <tr id="student_<%= student.id %>">
          <td id="button_<%=student.id %>">
            <%= link_to "Remove", export_list_remove_path(student.id), remote: true, class: "btn btn-danger" %>
          </td>
          <td>
            <%= student.student_id %>
          </td>
           <td>
            <%= student.first_name %>
          </td>
           <td>
            <%= student.last_name %>
          </td>
           <td>
            <%= student.grade %>
          </td>
           <td>
            <%= student.teacher %>
          </td>
       </tr>
       <% end %>
     </tbody>
     </table>
   </div>


      <div class="form-actions">
      <div class="modal-footer">
        <%= link_to "Finish", new_export_list_path, remote: true, class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Add More Students</button>
      </div>   
      </div>   

    </div>
  </div>
