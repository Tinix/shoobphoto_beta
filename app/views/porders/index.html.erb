<h1>Listing porders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @porders.each do |porder| %>
      <tr>
        <td><%= link_to 'Show', porder %></td>
        <td><%= link_to 'Edit', edit_porder_path(porder) %></td>
        <td><%= link_to 'Destroy', porder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Porder', new_porder_path %>
