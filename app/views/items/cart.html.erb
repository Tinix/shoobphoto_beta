<div id="table">

  <% @items.each_slice(3) do |slice| %>
  <div class="row">
    <% slice.each do |item| %>
    

      <div class="col-sm-4" id="preview">
        <%= link_to(items_preview_path(item.id, @cart.id), remote: true) do %>
        <div class="row">
        <div class="col-sm-3">
        <%= image_tag(item.thumb.url, class: "img img-rounded") %>
        </div>
         <div class="col-sm-9">
        <span class="grey"><%= item.number %></span><br/>
        <strong><%= item.name %></strong>
      </div>
    </div>
    <% end %>
      </div>
      
    <% end %>
  </div><br/>

  <% end %>


</div>
<br/>
<div class="row">
<div class="col-sm-10"></div>
<div class="col-sm-2" align="right">
<%= link_to "Continue", items_quantity_path(@cart.cart_id), class: "btn btn-custom" %>
</div>
</div>