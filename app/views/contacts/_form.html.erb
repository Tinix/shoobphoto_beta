<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="input">
    <h3>I am a:</h3>

    <div class="row">

<div class="col-sm-10">
<div class="row">
  <div class="col-sm-3">
  <%= f.label :admin, class: 'checkbox' do %>
  <%= f.check_box :admin %>
  Administrator
<% end %>
</div>

  <div class="col-sm-3">
  <%= f.label :teacher, class: 'checkbox' do %>
  <%= f.check_box :teacher %>
  Teacher/Coach
<% end %>
</div>

  <div class="col-sm-3">
  <%= f.label :parent, class: 'checkbox' do %>
  <%= f.check_box :parent, :id => "parent" %>
  Parent of a child taking pictures
<% end %>
</div>

<div class="col-sm-3">
  <%= f.label :jobseeker, class: 'checkbox' do %>
  <%= f.check_box :jobseeker, :id => "jobseeker" %>
  Jobseeker
<% end %>
</div>



</div>

</div>
</div>
    
    <hr>

    <div class="row">
      
      <div class="col-sm-5">
        <%= f.input :name, :label => "Name" %>
      </div>
      <div class="col-sm-2"></div>
      <div class="col-sm-5">
        <%= f.input :school, :label => "*School" %>
      </div>
    </div>
    <div  id="student" <%= "hidden" unless @contact.parent? %>>
      Enter NA if not applicable
    <div class="row" >
      
      <div class="col-sm-3">
        <%= f.input :student, :label => "*Student/Player" %>
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-1">
        <%= f.input :grade, :label => "*Grade/Team" %>
      </div>
      <div class="col-sm-2"></div>
      <div class="col-sm-5">

    <%= f.input :teacher_name %>
    </div>
  </div>

  <div class="row" >
      
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
        <%= f.input :order_number %>
      </div>
      <div class="col-sm-2"></div>
      <div class="col-sm-4">
        <%= f.input :package_type, :label => "*Package Type" %>
      </div>
      <div class="col-sm-1"></div>
  </div>

</div>
    <div class="row">
    <div class="col-sm-5">
        <%= f.input :address, :label => "Address" %>
      </div>
      <div class="col-sm-2"></div>
    <div class="col-sm-5">
        <%= f.input :city, :label => "City, State, Zip" %>
      </div>
    </div>
    <div class="row">
    <div class="col-sm-5">
        <%= f.input :email, :label => "Email" %>
      </div>
      <div class="col-sm-2"></div>
    <div class="col-sm-5">
        <%= f.input :phone, :label => "Phone" %>
      </div>
    </div>
    Message: <br/>
    <%= f.text_area :message, :input_html => {:cols => 1, :style => "min-width:100%;"}, as: :text  %>

  </div>

  <% if params[:school_use] == "true" %>
  <%= f.input :file %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Send" %>
  </div>
<% end %>

</div>
<div class="col-xs-2"></div>
</div>

<script type="text/javascript">
$('#parent').click(function () {
    $('#student').show();
});

$(".multiple").select2();

</script>
